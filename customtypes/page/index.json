{
  "format": "page",
  "id": "page",
  "label": "Pagina",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Titel",
          "placeholder": "Pagina naam",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "order": {
        "type": "Number",
        "config": {
          "label": "Prioriteit",
          "placeholder": "Plek in het menu (links > rechts)"
        }
      },
      "parent": {
        "type": "Link",
        "config": {
          "label": "Hoofdpagina",
          "select": "document",
          "repeat": false,
          "customtypes": ["page"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "contact_form": {
              "type": "SharedSlice"
            },
            "i_frame": {
              "type": "SharedSlice"
            },
            "faq": {
              "type": "SharedSlice"
            },
            "archive": {
              "type": "SharedSlice"
            },
            "latest_news": {
              "type": "SharedSlice"
            },
            "section": {
              "type": "SharedSlice"
            },
            "content_cards": {
              "type": "SharedSlice"
            },
            "contentcard": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
