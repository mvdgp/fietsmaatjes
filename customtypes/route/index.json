{
  "format": "page",
  "id": "route",
  "label": "Fietsroute",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Titel",
          "placeholder": "Titel"
        }
      },
      "distance": {
        "type": "Number",
        "config": {
          "label": "Afstand",
          "placeholder": "Afstand in km, noteer zo: 5.3"
        }
      },
      "body": {
        "type": "Text",
        "config": {
          "label": "Beschrijving",
          "placeholder": "Korte beschrijving"
        }
      },
      "route": {
        "type": "Text",
        "config": {
          "label": "Route",
          "placeholder": "Fietsroute (google maps embed link)"
        }
      },
      "steps": {
        "type": "Group",
        "config": {
          "label": "Knooppunten",
          "repeat": true,
          "fields": {
            "step": {
              "type": "Text",
              "config": {
                "label": "Knooppunt",
                "placeholder": "Het adres van het knooppunt"
              }
            }
          }
        }
      },
      "download_route": {
        "type": "Link",
        "config": {
          "label": "Fietsknoop Route",
          "placeholder": "GPX van de Fietsknoop app toevoegen",
          "select": "media",
          "allowText": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    }
  }
}
